@model WorkerCreateVm
<form method="post" enctype="multipart/form-data"   >
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Image">Image</label>
        <input class="form-control" asp-for="Image"  placeholder="Sheklinizi daxil edin!">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Fullname">Fullname</label>
        <input class="form-control" asp-for="Fullname" placeholder="Adinizi daxil edin!">
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" placeholder="Soz daxil edin!">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
      <div class="form-group">
        <label for="exampleInputEmail1" asp-for="PositionId">Position</label>
     <select asp-for="PositionId" class="alert-info">
        @foreach(var item in ViewBag.Positions)
        {
                <option value="@item.Id">@item.fullname</option>
        }
        </select>
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>